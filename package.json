{
  "name": "open-meteo-weather-forecast",
  "version": "1.0.0",
  "description": "Cyberpunk-style weather forecast application using Open-Meteo API",
  "main": "src/index.html",
  "scripts": {
    "test": "jest --testPathIgnorePatterns=integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=integration",
    "serve": "http-server src -p 8080"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/script.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/J1921604/open-meteo.git"
  },
  "keywords": [
    "weather",
    "forecast",
    "cyberpunk",
    "open-meteo",
    "chart.js"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/J1921604/open-meteo/issues"
  },
  "homepage": "https://github.com/J1921604/open-meteo#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "puppeteer": "^24.27.0"
  }
}
